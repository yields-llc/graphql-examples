{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "skipLibCheck": true,
    "types": [
      "node"
    ],
    "lib": ["dom", "ESNext"],
    "paths": {
      "@app/*": ["./app/*"],
      "@prisma/*": ["./prisma/*"]
    },
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "preserveSymlinks": true
  },
  "include": ["./**/*"],
  "exclude": ["node_modules"]
}
