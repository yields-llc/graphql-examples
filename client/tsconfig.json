{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "skipLibCheck": true,
    "types": [
      "node"
    ],
    "lib": ["dom", "ESNext"],
    "paths": {
      "@/*": ["./src/*"],
    },
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "preserveSymlinks": true,
    "noImplicitAny": true
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules"],
}
